#!/bin/bash
#================================================
GPWD=$PWD
#================================================
. $GPATH/.config
#================================================
lCheckIn="GPATH" ; if [ "${!lCheckIn}" = "" ] || ! [ -d "${!lCheckIn}" ] ; then echo $(gz_color s "$lCheckIn ?" yellow fg) ; exit ; fi 
lCheckIn="GOpenCV_PATH" ; if [ "${!lCheckIn}" = "" ] || ! [ -d "${!lCheckIn}" ] ; then echo $(gz_color s "$lCheckIn ?" yellow fg) ; exit ; fi 
lCheckIn="GOpenCV_BUILD" ; if [ "${!lCheckIn}" = "" ] || ! [ -d "${!lCheckIn}" ] ; then echo $(gz_color s "$lCheckIn ?" yellow fg) ; exit ; fi 
#================================================
GOpenCV_main() {
lArgSize="$#"
if [ "$lArgSize" = "0" ] ; then GOpenCV_help "$@"
else GOpenCV_process "$@" ; fi
}
#================================================
GOpenCV_help() {
lScript=$(gz_string filename "$0")
GSCRIPT="\t\033[0;35m${lScript}\033[0m"
GCOMMENT="\033[0;33m%s\033[0m"
GHELP="$GSCRIPT : $GCOMMENT\n"
GREQUEST="\033[36m%s\033[0m"
GPROCESS="$GSCRIPT $GREQUEST : $GCOMMENT\n"
printf "\n"
printf "%s\n" "Description:"
printf "\t%s\n" "Operations sur le module OpenCV."
printf "\n"
printf "%s\n" "Utilisation:"
printf "$GHELP" "afficher aide"
printf "$GPROCESS" "tes" "tester module"
printf "$GPROCESS" "cle" "nettoyer module"
printf "$GPROCESS" "com" "compiler module"
printf "$GPROCESS" "run" "executer module"
printf "$GPROCESS" "all" "nettoyer compiler executer module"
printf "$GPROCESS" "log" "afficher log"
printf "$GPROCESS" "git_cl" "git cloner module"
printf "$GPROCESS" "git_pu" "git tirer modifications module"
printf "$GPROCESS" "git_pa" "git ajouter commiter pousser modifications module"
printf "\n"
}
#================================================
GOpenCV_process() {
lArgSize="$#"
lArgCount=1
lRunFlag=0
while [ 1 ] ; do
if [ "$lArgCount" -gt "$lArgSize" ] ; then break ; fi
lKey=${!lArgCount} ; lArgCount=$(gz_string math "$lArgCount + 1")
# tes
if [ "$lKey" = "test" ] ; then 
GOpenCV_test ; lRunFlag=1 ; break
# cle
elif [ "$lKey" = "cle" ] ; then 
GOpenCV_clean ; lRunFlag=1 ; break
# com
elif [ "$lKey" = "com" ] ; then 
GOpenCV_compile ; lRunFlag=1 ; break
# run
elif [ "$lKey" = "run" ] ; then 
GOpenCV_run "$@" ; lRunFlag=1 ; break
# all
elif [ "$lKey" = "all" ] ; then 
GOpenCV_all "$@" ; lRunFlag=1 ; break
elif [ "$lKey" = "cyg_a" ] ; then 
GOpenCV_cygwin_all "$@" ; lRunFlag=1 ; break
# log
elif [ "$lKey" = "log" ] ; then 
GOpenCV_log ; lRunFlag=1 ; break
# log_c
elif [ "$lKey" = "log_c" ] ; then 
GOpenCV_log_clear ; lRunFlag=1 ; break
# git_cl
elif [ "$lKey" = "git_cl" ] ; then 
lRoot=${!lArgCount} ; lArgCount=$(gz_string math "$lArgCount + 1")
lUrl=${!lArgCount} ; lArgCount=$(gz_string math "$lArgCount + 1")
lName=${!lArgCount} ; lArgCount=$(gz_string math "$lArgCount + 1")
GOpenCV_git_clone "$lRoot" "$lUrl" "$lName" ; lRunFlag=1 ; break
# git_pa
elif [ "$lKey" = "git_pa" ] ; then 
GOpenCV_git_push_all ; lRunFlag=1 ; break
# git_pu
elif [ "$lKey" = "git_pu" ] ; then 
GOpenCV_git_push_all ; lRunFlag=1 ; break
#
fi
done
if [ "$lRunFlag" = "0" ] ; then GOpenCV_help ; fi 
}
#================================================
GOpenCV_test() {
GOpenCV_run
}
#================================================
GOpenCV_clean() {
cd $GOpenCV_BUILD
make clean -f Makefile.config
cd $GPWD
}
#================================================
GOpenCV_compile() {
cd $GOpenCV_BUILD
rm -f bin/gp_c
make compile -f Makefile.config
cd $GPWD
}
#================================================
GOpenCV_run() {
cd $GOpenCV_BUILD
echo
gp_c $2 $3 $4 $5 $6 $7 $8 $9
echo
cd $GPWD
}
#================================================
GOpenCV_all() {
GOpenCV_compile
GOpenCV_run "$@"
}
#================================================
GOpenCV_log() {
cd $GOpenCV_BUILD
lPath=$HOME/.readydev/readyc/data/debug/debug.txt
tail -f $lPath
cd $GPWD
}
#================================================
GOpenCV_log_clear() {
cd $GOpenCV_BUILD
lPath=$HOME/.readydev/readyc/data/debug/debug.txt
> $lPath
cd $GPWD
}
#================================================
GOpenCV_git_clone() {
local lRoot=$1
local lUrl=$2
local lName=$3
lCheckIn="lRoot" ; if [ "${!lCheckIn}" = "" ] || ! [ -d "${!lCheckIn}" ] ; then echo $(gz_color s "$lCheckIn ?" yellow fg) ; exit ; fi 
lCheckIn="lUrl" ; if [ "${!lCheckIn}" = "" ] ; then echo $(gz_color s "$lCheckIn ?" yellow fg) ; exit ; fi 
lRoot=$(gz_cygwin c "$lRoot")
cd $lRoot
git clone $lUrl $lName
cd $GPWD
}
#================================================
GOpenCV_git_push_all() {
cd $GOpenCV_PATH
git add --all
git commit -m "Initial Commit"
git push -u origin master
cd $GPWD
}
#================================================
GOpenCV_git_pull() {
cd $GOpenCV_PATH
git pull
cd $GPWD
}
#================================================
GOpenCV_main "$@"
#================================================
